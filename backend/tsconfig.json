{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "declarationMap": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "rootDir": "src"
  },
  "exclude": ["node_modules"]
}
